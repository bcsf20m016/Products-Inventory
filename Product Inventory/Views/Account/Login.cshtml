@model Product_Inventory.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "/Views/Shared/_AuthenticationLayout.cshtml";
}

<partial name="_ShowToastrPartial" />

<form method="post" asp-action="Login">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <h2 class="text-center">Welcome Back!</h2>
    <hr />
    <div class="form-floating mb-3">
        <input type="email" class="form-control" id="email" asp-for="Email" placeholder="abc@gmail.com" />
        <label class="form-label" for="email">Email</label>
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>

    <div class="form-floating mb-3">
        <input type="password" class="form-control" id="password" asp-for="Password" placeholder="123" />
        <label class="form-label" for="password">Password</label>
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>

    <div class="form-group mb-3">
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="rememberMe" asp-for="RememberMe" />
            <label class="form-check-label" for="rememberMe">Remember Me</label>
        </div>
    </div>

    <div class="form-group mb-3">
        <input type="submit" value="Login" class="btn btn-primary px-4" />
    </div>

    <div class="form-group">
        <a href="/Account/Register" class="text-decoration-none">Don't have an Account?</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}