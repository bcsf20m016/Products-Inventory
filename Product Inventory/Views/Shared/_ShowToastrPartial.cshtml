    @if (TempData["ToastrData"] is not null)
    {
        var d = TempData["ToastrData"] as String[];
        if (d[0] == "success")
        {
            <script>
                toastr.success('@d[2]', '@d[1]');
            </script>
        }
        else
        {
            <script>
                toastr.error('@d[2]', '@d[1]');
            </script>
        }
    }

}