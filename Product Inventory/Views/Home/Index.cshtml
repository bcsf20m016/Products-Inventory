    ViewData["Title"] = "Home Page";
}

<partial name="_ShowToastrPartial" />

<div class="container py-5">
    <div class="text-center">
        <h1>Welcome to Product Inventory</h1>
        <p class="lead">Your ultimate solution for managing your products</p>
        <a href="/Account/Login" class="btn btn-primary btn-lg">Get Started</a>
    </div>
    <div class="text-center mt-5">
        <h2 class="section-heading">Why Choose This Inventory?</h2>
        <p class="lead">Product Inventory offers a comprehensive solution for managing your products and streamlining your business operations. Here are some reasons to choose us:</p>
